<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnPickImage"
            android:layout_width="227dp"
            android:layout_height="64dp"
            android:layout_below="@+id/editTextPlantCode"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="369dp"
            android:text="Pick Image" />

        <TextView
            android:id="@+id/tv_plantNameConf"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_plantType"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:text="Name:"
            android:textColor="#323232"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_plantType"
            android:layout_width="76dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="109dp"
            android:fontFamily="sans-serif-black"
            android:text="Type:"
            android:textColor="#323232"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_plantCode"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_below="@+id/tv_plantNameConf"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-black"
            android:text="Plant code:"
            android:textColor="#323232"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="61dp"
            android:layout_toEndOf="@+id/tv_plantNameConf"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="" />

        <EditText
            android:id="@+id/editTextPlantCode"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="61dp"
            android:layout_toEndOf="@+id/tv_plantCode"
            android:ems="10"
            android:inputType="textVisiblePassword"
            android:minHeight="48dp"
            android:text="" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="314dp"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="63dp"
            android:text="Save" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="227dp"
            android:layout_height="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="61dp" />

        <ImageView
            android:id="@+id/imgPlantView"
            android:layout_width="224dp"
            android:layout_height="182dp"
            android:layout_above="@+id/saveBtn"
            android:layout_below="@+id/btnPickImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="-346dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="27dp"
            tools:src="@tools:sample/avatars" />

    </RelativeLayout>

</FrameLayout>